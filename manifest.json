{
    "manifest_version": 3,
    "name": "vue",
    "version": "1.0",
    "description": "Video Ultrawide Extension",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "background": {
        "service_worker": "service_worker.js"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "include_globs": [
                "*://*.netflix.com/*",
                "*://*.amazon.*/video/*",
                "*://*.disneyplus.com/*",
                "*://*.youtube.com/*"
            ],
            "js": ["conent_script.js"]
        }
    ],

    "commands": {
        "16:9": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Zoom video to fit aspect ration 16:9."
        },
        "21:9": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "Zoom video to fit aspect ration 21:9."
        },
        "32:9": {
            "suggested_key": {
                "default": "Ctrl+Shift+3"
            },
            "description": "Zoom video to fit aspect ration 32:9."
        }
    },

    "permissions": ["tabs"]
}